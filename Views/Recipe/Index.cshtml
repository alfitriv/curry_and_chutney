@model System.Collections.Generic.IEnumerable<MYFIRSTAPP.Models.Recipe>
    <h1>Recipe Details</h1>

    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.ActionLink(item.Category, item.Category)
                </td>

            </tr>
        }
        </table>